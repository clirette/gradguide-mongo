<% include ./partials/header %>
<% include ./partials/messages %>
<h1>Completed Courses</h1>
<div class="courses-container">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Course</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this course?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary delete-confirm">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
<% completedCourses.forEach(course => { %>
    <div class="course" style="margin-bottom: 3vh;">
        <button style="margin-right: 1vw;" type="button" class="btn btn-primary delete-modal" data-toggle="modal" data-target="#exampleModal" data-courseId="<%= course.courseId %>" data-href="/delete-course">
                Delete
        </button>
        <h4 style="display: inline-block"><%= course.subjectCode %>-<%= course.subjectNumber %> <%= course.name %> Grade: <%= course.letterGrade %></h4>
    </div>
<% }) %>
</div>
<script src="js/completed-courses.js"></script>
<% include ./partials/footer %>